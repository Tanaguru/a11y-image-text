<table class="palette-table">
  <thead {{#if headerVisible}}{{else}}class="visuallyhidden"{{/if}}>
    <tr>
      <th class="palette-table__col palette-table__col--header palette-table__color">
        <div class="palette-table__col-title">Colour</div>
      </th>
      <th class="palette-table__col palette-table__col--header palette-table__aa">
        <div class="palette-table__col-title">AA</div>
      </th>
      <th class="palette-table__col palette-table__col--header palette-table__aaPlus">
        <div class="palette-table__col-title">AA (18pt +)</div>
      </th>
      <th class="palette-table__col palette-table__col--header palette-table__aaa">
        <div class="palette-table__col-title">AAA</div>
      </th>
      <th class="palette-table__col palette-table__col--header palette-table__aaaPlus">
        <div class="palette-table__col-title">AAA (18pt +)</div>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="palette-table__col palette-table__color">
        <div class="palette__item-color" style="background-color: {{color}};"><span class="visuallyhidden">{{color}}</span></div>
      </td>
      {{#each indicator}}
        <td class="palette-table__col palette-table__aa">
          <div class="accesibility-palette-indicator compliance-indicators__item{{stateModifier}}">{{state}}</div>
        </td>
      {{/each}}
    </tr>
  </tbody>
</table>
